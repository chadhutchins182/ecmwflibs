# Use Ubuntu 22.04 as base image
FROM ubuntu:22.04

# Avoid prompts from apt
ENV DEBIAN_FRONTEND=noninteractive

# Create vscode user
RUN groupadd --gid 1000 vscode \
    && useradd --uid 1000 --gid vscode --shell /bin/bash --create-home vscode

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Essential build tools
    build-essential \
    gcc \
    g++ \
    gfortran \
    make \
    cmake \
    pkg-config \
    git \
    wget \
    curl \
    unzip \
    # Python development
    software-properties-common \
    # Libraries needed for ECMWF tools
    libnetcdf-dev \
    libhdf5-dev \
    libjpeg-dev \
    libpng-dev \
    libfreetype6-dev \
    libfontconfig1-dev \
    libxml2-dev \
    libproj-dev \
    libgeos-dev \
    libeccodes-dev \
    # Additional utilities
    vim \
    nano \
    htop \
    tree \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.12 from deadsnakes PPA
RUN add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y \
    python3.12 \
    python3.12-dev \
    python3.12-venv \
    python3.12-distutils \
    python3.13 \
    python3.13-dev \
    python3.13-venv \
    python3.13-distutils \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install pip for Python 3.12 and 3.13
RUN curl -sS https://bootstrap.pypa.io/get-pip.py | python3.12
RUN curl -sS https://bootstrap.pypa.io/get-pip.py | python3.13

# Set Python 3.12 as default python3
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1

# Create symbolic links for easier access
RUN ln -sf /usr/bin/python3.12 /usr/local/bin/python3.12
RUN ln -sf /usr/bin/python3.13 /usr/local/bin/python3.13

# Install ECMWF libraries from source for better compatibility
WORKDIR /tmp

# Install eccodes
RUN wget https://confluence.ecmwf.int/download/attachments/45757960/eccodes-2.32.1-Source.tar.gz && \
    tar -xzf eccodes-2.32.1-Source.tar.gz && \
    cd eccodes-2.32.1-Source && \
    mkdir build && cd build && \
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr/local \
             -DENABLE_NETCDF=ON \
             -DENABLE_PNG=ON \
             -DENABLE_PYTHON=ON \
             -DPYTHON_EXECUTABLE=/usr/bin/python3.12 && \
    make -j$(nproc) && \
    make install && \
    ldconfig

# Install Magics++
RUN wget https://confluence.ecmwf.int/download/attachments/3473464/Magics-4.15.0-Source.tar.gz && \
    tar -xzf Magics-4.15.0-Source.tar.gz && \
    cd Magics-4.15.0-Source && \
    mkdir build && cd build && \
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr/local \
             -DENABLE_NETCDF=ON \
             -DENABLE_CAIRO=ON \
             -DENABLE_PYTHON=ON \
             -DPYTHON_EXECUTABLE=/usr/bin/python3.12 && \
    make -j$(nproc) && \
    make install && \
    ldconfig

# Clean up build files
RUN rm -rf /tmp/*

# Install Python packages for development
RUN python3.12 -m pip install --upgrade pip setuptools wheel
RUN python3.13 -m pip install --upgrade pip setuptools wheel

# Install common development tools for both Python versions
RUN for py_version in python3.12 python3.13; do \
        $py_version -m pip install \
        pytest \
        pytest-cov \
        black \
        isort \
        pylint \
        mypy \
        tox \
        twine \
        build \
        numpy \
        cffi \
        findlibs; \
    done

# Set up workspace directory
WORKDIR /workspace

# Switch to vscode user
USER vscode

# Set up Python virtual environments for testing
RUN python3.12 -m venv /home/vscode/venv-py312
RUN python3.13 -m venv /home/vscode/venv-py313

# Add convenience aliases to bashrc
RUN echo 'alias py312="source /home/vscode/venv-py312/bin/activate"' >> /home/vscode/.bashrc
RUN echo 'alias py313="source /home/vscode/venv-py313/bin/activate"' >> /home/vscode/.bashrc
RUN echo 'alias ll="ls -la"' >> /home/vscode/.bashrc
RUN echo 'export PATH="/usr/local/bin:$PATH"' >> /home/vscode/.bashrc
RUN echo 'export LD_LIBRARY_PATH="/usr/local/lib:$LD_LIBRARY_PATH"' >> /home/vscode/.bashrc
RUN echo 'export PKG_CONFIG_PATH="/usr/local/lib/pkgconfig:$PKG_CONFIG_PATH"' >> /home/vscode/.bashrc

# Set default shell to bash
SHELL ["/bin/bash", "-c"]

CMD ["/bin/bash"]